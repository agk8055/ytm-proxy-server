{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/streams/(.*)",
      "destination": "/api/streams/$1"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "YTDL_NO_UPDATE": "true",
    "TMPDIR": "/tmp"
  }
}
